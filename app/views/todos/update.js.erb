
$("div#<%= dom_id(@todo)  %>").parent().replaceWith("<%= j (render(@todo)) %>");


var $todo = $('#todo-ul'),
  $todoli = $todo.children('li');

$todoli.sort(function(a,b){
  var an = $(a).find('.priority > p').text();
  var bn = $(b).find('.priority > p').text();
  if(an === "High"){
    an = 1;
  } else if(an === "Medium"){
    an = 2;
  } else if(an === "Low"){
    an = 3;
  }

  if(bn === "High"){
    bn = 1;
  } else if(bn === "Medium"){
    bn = 2;
  } else if(bn === "Low"){
    bn = 3;
  }

  if(an > bn) {
    return 1;
  }
  if(an < bn) {
    return -1;
  }
  return 0;
});

$todoli.detach().appendTo($todo);

